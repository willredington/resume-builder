        "libs/frontend/customer/feat-dashboard/src/index.ts"
      ],
      "@resume-builder/frontend/customer/feat-resume-builder": [
        "libs/frontend/customer/feat-resume-builder/src/index.ts"
      ],
      "@resume-builder/frontend/customer/feat-resume-template": [
        "libs/frontend/customer/feat-resume-template/src/index.ts"
      ],
      "@resume-builder/frontend/customer/util-store": [
        "libs/frontend/customer/util-store/src/index.ts"
      ],
      "@resume-builder/frontend/shared/ui-common": [
        "libs/frontend/shared/ui-common/src/index.ts"
      ],
      "@resume-builder/frontend/shared/ui-theme": [
        "libs/frontend/shared/ui-theme/src/index.ts"
      ],
      "@resume-builder/shared/customer/util-resume": [
        "libs/shared/customer/util-resume/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
